<form method="post" action="{{ path('app_login') }}">

    {% if error %}
        <div class="alert alert-danger">
            <h2>Impossible to login :</h2>
            <p>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </p>
        </div>
    {% endif %}
    {% include 'includes/flashes.html.twig' %}

    <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="form-group">
        <label for="inputUsername">Username</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
               autofocus>
    </div>

    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_register') }}" class="btn btn-lg btn-light">
            Create account
        </a>

        <button class="btn btn-lg btn-primary float-right" type="submit">
            Sign in
        </button>
    </div>

    <div class="d-flex justify-content-between my-2">
        <a href="{{ path('app_forgot_password_request') }}">
            Forgot password
        </a>
    </div>
</form>