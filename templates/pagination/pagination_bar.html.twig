<nav class="pagination-standard" aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
            <a class="page-link" href="{{path(currentRoute, {'page' : 1 , 'limit' : limit}) }}" aria-label="First">
                <span aria-hidden="true">First Page (#1)</span>
            </a>
        </li>
        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
            <a class="page-link" href="{{path(currentRoute, {'page' : page - 1 , 'limit' : limit}) }}" aria-label="Preview">&lt;</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">{{ page }}</a>
        </li>
        <li class="page-item {{ page == max_page ? 'disabled' : '' }}">
            <a class="page-link" href="{{ path(currentRoute, {'page' : page + 1 , 'limit' : limit}) }}" aria-label="Next">&gt</a>
        </li>
        <li class="page-item {{ page == max_page ? 'disabled' : '' }}">
            <a class="page-link" href="{{ path(currentRoute, {'page' : max_page , 'limit' : limit}) }}" aria-label="Last">
                <span aria-hidden="true">Last Page (#{{ max_page }})</span>
            </a>
        </li>
    </ul>
</nav>