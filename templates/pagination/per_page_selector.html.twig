<div class="btn-group m-3">
    <button type="button" class="btn btn-primary w-25 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="badge badge-secondary">{{ limit }}</span>
        Per Page
    </button>
    <div class="dropdown-menu">
        <a
                class="dropdown-item {{ limit == 5 ? 'disabled'}}"
                href="{{path(currentRoute, {'page' : page , 'limit' : 5}) }}">
            5
        </a>
        <a
                class="dropdown-item {{ limit == 10 ? 'disabled'}}"
                href="{{path(currentRoute, {'page' : page , 'limit' : 10}) }}">
            10
        </a>
        <a
                class="dropdown-item {{ limit == 20 ? 'disabled'}}"
                href="{{path(currentRoute, {'page' : page , 'limit' : 20}) }}">
            20
        </a>
        <a
                class="dropdown-item {{ limit == 50 ? 'disabled'}}"
                href="{{path(currentRoute, {'page' : page , 'limit' : 50}) }}">
            50
        </a>
    </div>
</div>